@model PostViewModel

@{
    //asp for alllows us bind input values to properties values
}

@{

}
<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>

        <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>
        
        <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>
        
        <div>
            <label>Category</label>
            <select asp-for="Category">
                <option value="Travel">Travel</option>
                <option value="Programming">Programming</option>
                <option value="Photography">Photography</option>
            </select>
        </div>

        <div>
            <label>Body</label>
            <textarea id="editor" asp-for=" Body"></textarea>
        </div>

        <div>
            <label>Image</label>
            <input type="hidden" asp-for="CurrentImage" />
            <input asp-for="Image" />
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>

@section scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>

}
